<%- layout("./layouts/boilerplate.ejs") %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-center text-gray-700 mb-4">
        Register for Event
    </h1>

    <form
        action="/events/register/<%= eventId %>"
        method="POST"
        class="space-y-4"
    >
        <input
            type="hidden"
            id="studentId"
            name="studentId"
            value="<%= currUser.studentId %>"
        />

        <div>
            <label for="name" class="block text-sm font-medium text-gray-700">
                Name
            </label>
            <input
                type="text"
                id="name"
                name="name"
                class="w-full p-2 border border-gray-300 rounded-md bg-gray-100 text-gray-500 cursor-not-allowed"
                value="<%= currUser.name %>"
                readonly
            />
        </div>

        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">
                Email
            </label>
            <input
                type="email"
                id="email"
                name="email"
                class="w-full p-2 border border-gray-300 rounded-md bg-gray-100 text-gray-500 cursor-not-allowed"
                value="<%= currUser.email %>"
                readonly
            />
        </div>

        <div>
            <label
                for="department"
                class="block text-sm font-medium text-gray-700"
            >
                Department
            </label>
            <input
                type="text"
                id="department"
                name="department"
                class="w-full p-2 border border-gray-300 rounded-md bg-gray-100 text-gray-500 cursor-not-allowed"
                value="<%= currUser.department %>"
                readonly
            />
        </div>

        <div>
            <label for="year" class="block text-sm font-medium text-gray-700">
                Year
            </label>
            <input
                type="number"
                id="year"
                name="year"
                class="w-full p-2 border border-gray-300 rounded-md bg-gray-100 text-gray-500 cursor-not-allowed"
                value="<%= currUser.year %>"
                readonly
            />
        </div>

        <div class="flex justify-center">
            <button
                type="submit"
                class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-700"
            >
                Register
            </button>
        </div>
    </form>
</div>
