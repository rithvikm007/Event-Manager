<% if (success && success.length) { %>
<div
    class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-3 mb-3"
    role="alert"
    id="success-alert"
>
    <div
        class="bg-green-500 text-white p-4 rounded-lg shadow-md flex justify-between items-center"
    >
        <span><%= success %></span>
        <button
            type="button"
            class="text-white"
            onclick="document.getElementById('success-alert').style.display = 'none'"
            aria-label="Close"
        >
            <span>&times;</span>
        </button>
    </div>
</div>
<% } %> <% if (error && error.length) { %>
<div
    class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3 mb-3"
    role="alert"
    id="error-alert"
>
    <div
        class="bg-red-500 text-white p-4 rounded-lg shadow-md flex justify-between items-center"
    >
        <span><%= error %></span>
        <button
            type="button"
            class="text-white"
            onclick="document.getElementById('error-alert').style.display = 'none'"
            aria-label="Close"
        >
            <span>&times;</span>
        </button>
    </div>
</div>
<% } %>
